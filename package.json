{
  "name": "aloft4",
  "version": "4.0.0",
  "description": "Caption streaming app",
  "main": "app.js",
  "scripts": {
    "build-rich": "mkdir -p static/dist/ && ./node_modules/.bin/browserify lib/richtext-client.js -o static/dist/richtext.js",
    "build-dashboard": "mkdir -p static/dist/ && ./node_modules/.bin/browserify lib/textarea-client.js -o static/dist/textarea.js",
    "build-watch": "browserify static/js/client.js -o static/dist/bundle.js",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
	"make": "browserify static/dist/make-files/client.js --standalone sharedb,ot-text > static/sharedb/client-built.js",
	"makeserver": "cp ~/aloft-config.js ~/aloft4/config && cp ~/mailer.js ~/aloft4/config && node app.js",
    "start": "node app.js"
  },
  "keywords": [
    "captions",
    "steno",
    "stenography",
    "plover",
    "open",
    "steno",
    "project",
    "stenotype"
  ],
  "author": "Stanley Sakai",
  "license": "MIT",
  "repository": "github.com/stanographer/aloft4",
  "dependencies": {
    "angular": "^1.6.5",
    "angular-local-storage": "^0.5.2",
    "angular-minicolors": "0.0.10",
    "angular-user-settings": "^0.2.0",
    "async": "^2.4.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "browserify": "^14.3.0",
    "cluster": "^0.7.7",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "crypto": "0.0.3",
    "dateformat": "^3.0.2",
    "express": "^4.15.2",
    "express-session": "^1.15.3",
    "http": "0.0.0",
    "install": "^0.10.1",
    "jade": "^1.11.0",
    "jquery": "^3.2.1",
    "json": "^9.0.6",
    "jsonwebtoken": "^7.4.1",
    "method-override": "^2.3.9",
    "moment": "^2.18.1",
    "mongoose": "^4.10.7",
    "multer": "^1.3.0",
    "nodemailer": "^4.0.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "npm": "^5.0.3",
    "os": "^0.1.1",
    "ot-text": "^1.0.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "querystring": "^0.2.0",
    "quill": "^1.2.4",
    "reconnecting-websocket": "^3.0.5",
    "rich-text": "^3.1.0",
    "share-js-stream": "^1.0.5",
    "sharedb": "^1.0.0-beta.7",
    "sharedb-mongo": "^1.0.0-beta.4",
    "sharedb-redis-pubsub": "^1.0.0-beta.1",
    "sharedb-string-binding": "^1.0.0",
    "underscore": "^1.8.3",
    "url": "^0.11.0",
    "websocket-json-stream": "0.0.3",
    "wildcard-subdomains": "^1.1.0",
    "ws": "^2.3.1"
  },
  "devDependencies": {
    "morgan": "^1.8.2"
  }
}
